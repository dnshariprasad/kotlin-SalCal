<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingTop="@dimen/distance_medium"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/sal_card"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/distance_normal"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/distance_normal"
            android:layout_marginLeft="@dimen/distance_normal"
            android:layout_marginStart="@dimen/distance_normal">

            <EditText
                android:id="@+id/sal_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:hint="@string/hint_salary"
                android:inputType="number"
                android:padding="@dimen/distance_small" />

            <ImageView
                android:id="@+id/ok_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_done_black_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/increment_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/distance_small"
        android:layout_marginStart="@dimen/distance_small"
        android:layout_marginTop="@dimen/distance_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sal_card" />

</android.support.constraint.ConstraintLayout>
